                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:views="clr-namespace:MedExam.Patient.Reports.Views">
    <ContentControl.Template>
        <ControlTemplate TargetType="ContentControl">
            <DockPanel Margin="0 2">
                <views:ReportFieldTitle Text="{TemplateBinding Tag}" />
                <ContentPresenter />
            </DockPanel>
        </ControlTemplate>
    </ContentControl.Template>
</ContentControl>
