<ContentControl x:Class="MedExam.Patient.Reports.Views.ReportField"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:views="clr-namespace:MedExam.Patient.Reports.Views">
    <ContentControl.Template>
        <ControlTemplate TargetType="ContentControl">
            <DockPanel>
                <views:ReportFieldTitle Text="{TemplateBinding Tag}" FontStyle="Normal" />
                <views:BorderBottomBlackLine>
                    <ContentPresenter ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                      VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                      ContentSource="{TemplateBinding Content}" 
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                                      />
                </views:BorderBottomBlackLine>
            </DockPanel>
        </ControlTemplate>
    </ContentControl.Template>
</ContentControl>
